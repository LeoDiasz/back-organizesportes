generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  uid String
  phoneNumber String? 
  organization Organization?

  @@map("users")
}

model Organization {
  id String @id @default(uuid())
  name String
  modality String
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  createdAt DateTime @default(now())
  matchs Match[]

  @@map("organizations")

}

model Match {
  id String @id @default(uuid())
  local String
  dateTime DateTime
  modality String
  status String
  duration Int
  numberPlayers Int
  numberMaxPlayers Int
  numberMinPlayers Int
  inviteCode String?
  createdAt DateTime @default(now())
  organization Organization @relation(fields: [idOrganization], references: [id])
  idOrganization String
  guests Guest[]
  teams Team[]

  @@map("matchs")
}

model Guest {
  id String @id @default(uuid())
  name String
  email String
  rank String? 
  phoneNumber String?
  isConfirm Boolean @default(false)
  preferencePosition String?
  match Match @relation(fields: [idMatch], references: [id])
  idMatch String
  team Team? @relation(fields: [idTeam], references: [id])
  idTeam String?

  @@map("guests")
}

model Team {
  id String @id @default(uuid()) 
  nameTeam String 
  countPlayers Int
  guests Guest[]
  match Match @relation(fields: [idMatch], references: [id])
  idMatch String

  @@map("teams")
}